<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddCustomer">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="34dp"
            android:orientation="vertical"
            android:paddingBottom="150dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/pp_img"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:adjustViewBounds="true"
                android:background="@color/black_12"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CircleImageV" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_pp_img"
                style="?attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="@string/btn_add"
                android:textColor="@color/design_default_color_secondary_variant"
                tools:ignore="TextContrastCheck" />

            <ImageView
                android:id="@+id/sp_img"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@color/black_12"
                android:scaleType="centerCrop"
                tools:ignore="ContentDescription" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_sp_img"
                style="?attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="@string/btn_add_sp"
                android:textColor="@color/design_default_color_secondary_variant"
                tools:ignore="DuplicateSpeakableTextCheck,TextContrastCheck" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="@string/hint_cus_name"
                android:textColorHint="@color/black"
                app:boxStrokeColor="@color/design_default_color_secondary_variant"
                app:boxStrokeWidthFocused="1dp"
                app:endIconMode="clear_text"
                app:helperText="@string/helptxt_cus_name"
                app:helperTextEnabled="true"
                app:hintTextColor="@color/design_default_color_secondary_variant">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/customer_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="TextContrastCheck" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="@string/hint_store_name"
                android:textColorHint="@color/black"
                app:boxStrokeColor="@color/design_default_color_secondary_variant"
                app:boxStrokeWidthFocused="1dp"
                app:endIconMode="clear_text"
                app:helperText="@string/helptxt_store_name"
                app:hintTextColor="@color/design_default_color_secondary_variant">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/store_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="TextContrastCheck" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="@string/hint_cus_mobile"
                android:inputType="phone"
                android:textColorHint="@color/black"
                app:boxStrokeColor="@color/design_default_color_secondary_variant"
                app:boxStrokeWidthFocused="1dp"
                app:endIconMode="clear_text"
                app:helperText="@string/helptxt_cus_mobile"
                app:hintTextColor="@color/design_default_color_secondary_variant"
                app:prefixText="+94">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    tools:ignore="TextContrastCheck" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="@string/hint_cus_street_address"
                android:textColorHint="@color/black"
                app:boxStrokeColor="@color/design_default_color_secondary_variant"
                app:boxStrokeWidthFocused="1dp"
                app:endIconMode="clear_text"
                app:helperText="@string/helptxt_cus_street_address"
                app:hintTextColor="@color/design_default_color_secondary_variant">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/street_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="@string/hint_cus_city"
                android:textColorHint="@color/black"
                app:boxStrokeColor="@color/design_default_color_secondary_variant"
                app:boxStrokeWidthFocused="1dp"
                app:endIconMode="clear_text"
                app:helperText="@string/helptxt_cus_city"
                app:hintTextColor="@color/design_default_color_secondary_variant">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/modify_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    android:backgroundTint="@color/purple_500"
                    android:elevation="0dp"
                    android:onClick="modifyCustomer"
                    android:padding="20dp"
                    android:text="@string/btn_save"
                    app:elevation="0dp"
                    tools:ignore="DuplicateSpeakableTextCheck,TextContrastCheck" />

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

    </ScrollView>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/topAppBarParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="12dp"
            android:background="@color/transparent"
            app:elevation="0dp">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/profit_margin_top"
                style="@style/Widget.MaterialComponents.Toolbar.Primary"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_margin="4dp"
                android:background="@drawable/round_corner_rectangle"
                android:elevation="0dp"
                app:menu="@menu/top_app_bar"
                app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
                app:title="add_new_customer" />

        </com.google.android.material.appbar.AppBarLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/light_blue"
        app:itemIconTint="@drawable/selector"
        app:itemTextColor="@drawable/selector"
        app:menu="@menu/bottom">

    </com.google.android.material.bottomnavigation.BottomNavigationView>


</RelativeLayout>